{% extends 'layout.twig' %}

{% block content %}
    <div id="page-home">

        {#
        |
        | Section Banner
        |-----------------
        #}
        {{ global.banner({
            'title': translations.yagami_demo_title,
            'image': img ~ '/global/theme.jpg',
            'content': translations.yagami_demo_content
        }) }}


        {#
        |
        | Section Content
        |------------------
        #}
        {% set titlesType = {
            'title-xxl' : "Im a XXLarge title",
            'title-xl' : "Im a XLarge title",
            'title-lg' : "Im a Large title",
            'title-md' : "Im a Medium title",
            'title-sm' : "Im a Small title",
            'title-xs' : "Im a Xsmall title"
        } %}

        <section class="section">
            <div class="container mb-xl-child-not-last">
                {% for class, title in titlesType %}
                    <div>
                        <h2 class="{{ class }} mb-md">{{ title }}</h2>
                        <div class="row">
                            <div class="col-lg-7">
                                <div class="cms">
                                    Lorem ipsum dolor sit amet consectetur adipisicing elit. Earum vitae sunt rem eveniet, doloremque quaerat! Laboriosam labore sunt porro nostrum eaque vero rerum quo iste. Asperiores harum odio similique aliquid.
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                
            </div>            
        </section>

                {#
        |
        | Section news
        |---------------
        #}
        <section class="section">
            <div class="container">
                <div class="row loaded-posts mb-md-child">
                    {% for key, value in posts %}
                        <div class="col-sm-4">
                            {{ global.card({
                                'image'  : img ~ '/global/theme-sm.jpg',
                                'terms'  : value.get_terms('category'),
                                'title'  : value.title,
                                'date'   : value.date|date('F Y')|capitalize,
                                'content': value.content|truncate(20, true),
                                'link'   : value.link
                            }) }}
                        </div>
                    {% endfor %}
                </div>
                
                {{ global.pagination({ 'pagination': posts.pagination, 'prev': 'Précédent', 'next': 'Suivant' }) }}
            </div>
        </section>
    </div>
{% endblock %}

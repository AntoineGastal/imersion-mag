{% extends 'layout.twig' %}

{% block content %}
    <div id="page-home">

        {#
        |
        | Section Banner
        |-----------------
        #}
        {{ global.banner({
            'title': "Discover amazing places around the world",
            'image': img ~ '/global/home.jpg',
            'content': "Imersion Magazine presents a selection of amazing places on Earth: beautiful islands, wild landscapes, trendy bars,..."
        }) }}

        {#
        |
        | Section news
        |---------------
        #}
        <section class="section">
            <div class="container">
                <h2 class="mb-md">Latest articles</h2>
                <div class="row loaded-posts mb-md-child">
                    {% for key, value in posts %}
                        <div class="col-xs-12">
                            {{ global.card({
                                'image'  : value.thumbnail.src,
                                'terms'  : value.get_terms('category'),
                                'title'  : value.title,
                                'date'   : value.date|date('F Y')|capitalize,
                                'content': value.content|truncate(20, true),
                                'link'   : value.link
                            }) }}
                        </div>
                    {% endfor %}
                </div>
                
                {{ global.pagination({ 'pagination': posts.pagination, 'prev': 'Précédent', 'next': 'Suivant' }) }}
            </div>
        </section>

                {#
        |
        | Section Content
        |------------------
        #}

        <section class="section" style="background:#fafdf3;">
            <div class="container mb-xl-child-not-last">

                    <div>
                        <h2 class="mb-md">Imersion Magazine: discover the most amazing places around the world</h2>
                        <div class="row">
                            <div class="col-lg-7">
                                <div class="cms">
                                    <p>You loved immersive experiences thrgough imersion.io? You are lookinf for islands, hotels, bars... for your next holidays? With Imersion Magazon, find out outstanding places to have a drink, relax, chill and have fun. Enjoy!</p>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>            
        </section>

    </div>
{% endblock %}

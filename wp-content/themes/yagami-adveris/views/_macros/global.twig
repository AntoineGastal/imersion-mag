{% macro banner(params) %}
    {% set classes = params.classes  %}
    {% set image   = params.image  %}
    {% set title   = params.title  %}
    {% set content = params.content %}

    <section class="banner {{ classes }}" style="background-image: url('{{ image }}')" data-kira-timeline-onload>
        <div class="item-content">
            <div class="container">
                <h1 class="title-xxl item-title mb-md c-white" {# data-kira-item="splitline" data-splittext="lines, words, chars"  data-start="0.2" #}>{{ title }}</h1>
                <div class="item-text" data-kira-item="fadeInUp" data-start="-=1">
                    <div class="row">
                        <div class="col-lg-7">
                            <div class="cms c-white">
                                {{ content }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endmacro %}
{#
|
| Pagination
|-------------
#}
{% macro pagination(params) %}
	{% set pagination = params.pagination %}
	{% set prev = params.prev ? params.prev : 'prev' %}
	{% set next = params.next ? params.next : 'next' %}

	<ul class="pagination-container">
        {#
        |
        | Prev
        |-------
        #}
		{% if pagination.prev %}
			{% set link = pagination.prev.link %}
			<li><a href="{{ link }}">{{ prev }}</a></li>
		{% endif %}

        {#
        |
        | Pages
        |--------
        #}
		{% for page in pagination.pages %}
			<li>
				{% if page.link %}
					<a href="{{ page.link }}" class="{{ page.class }}">{{ page.title }}</a>
				{% else %}
					<span class="{{ page.class }}">{{ page.title }}</span>
				{% endif %}
			</li>
		{% endfor %}

        {#
        |
        | Next
        |-------
        #}
		{% if pagination.next %}
			{% set link = pagination.next.link %}
			<li/><a href="{{ link }}">{{ next }}</a></li>
		{% endif %}
	</ul>
{% endmacro %}


{# 
|
| Card block
|-------------
#}
{% macro card(params) %}
	{% set link    = params.link %}
	{% set image   = params.image %}
	{% set date    = params.date %}
	{% set title   = params.title %}
	{% set content = params.content %}
	{% set terms   = params.terms %}

	<article class="custom-card">
        <a href="{{ link }}" title="{{ title }}" class="custom-card-link">
            <div class="card-img-container">
                <div class="card-img bg-cover" style="background-image: url('{{ image }}')"></div>
            </div>
            <div class="card-content md-up-pr-lg pt-md">
                <span class="fs-xs ls-xs mb-sm">{{ date }}</span>
                <h2>{{ title }}</h2>
            </div>
        </a>
	</article>
{% endmacro %}



{% import '_macros/global.twig' as global %}

{% for key, value in posts %}
    {#<div class="col-lg-4 col-md-6">#}
    <div class="col-lg-12 col-md-12">
        {{ global.card({
            'image'  : value.thumbnail.src,
            'terms'  : value.get_terms('category'),
            'title'  : value.title,
            'date'   : value.date|date('d.m.Y')|capitalize,
            'contribution_by'  : value.contribution_by,
            'contributor_link'  : value.contributor_link,
            'external_link'  : value.external_link,
            'content': value.content|truncate(20, true),
            'link'   : value.link
        }) }}
    </div>
{% endfor %}

{% if limit|length < 1 %}
<div>
    <div class="no-more-post"></div>
</div>
{% endif %}

